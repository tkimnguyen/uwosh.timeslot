<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="uwosh.timeslot">

<body>
  <div metal:fill-slot="main">
    <tal:main-macro metal:define-macro="main"
                    tal:define="isCurrentUserLoggedIn view/isCurrentUserLoggedIn;
                                allowSignupForMultipleSlots context/getAllowSignupForMultipleSlots">
      
      <h2 tal:content="context/Title" />
      
      <ul>
	<li><a tal:attributes="href string:${context/absolute_url}/@@show-reservations">View My Reservations</a></li>
      </ul>

      <hr>
    
      <tal:block tal:condition="not:isCurrentUserLoggedIn">
	<p>To signup for a spot you will need to
	  <a tal:attributes="href string:${context/absolute_url}/login_form?came_from=${context/absolute_url}/@@choose-timeslot-view">
	  login</a> first.
	</p>
      </tal:block>

      <div tal:condition="context/contactInfo" id="contactInfo">
	<h3>If you have any questions please contact:</h3>
	
	<tal:block tal:repeat="line context/contactInfo">
	  <span tal:content="line" /><br />
	</tal:block>
	
	<br />
      </div>
		
      <form method="post" tal:attributes="action string:${context/absolute_url}/@@submit-user-selection;">
        <table class="plain" tal:define="days context/getDays">
	  <tal:block tal:condition="not:days">
	    <tr style="background-color: #F0F0F0">
	      <th style="border: none">
		<h3>No days have been made available for this signup sheet yet.</h3>
	      </th>
	    </tr>
	  </tal:block>

	  <tal:block tal:repeat="day days">
	    <tr style="background-color: #F0F0F0">
	      <th colspan="4" style="text-align: left; border: none">
		<h4 style="float: left" tal:content="day/Title" />
	        <div style="float: left" tal:condition="view/showEditLinks">
		  &nbsp;<a tal:attributes="href string:${day/absolute_url}/edit">Edit</a>
	        </div>
	      </th>
	    </tr>
		  
	    <tr>
	      <th tal:condition="context/showSlotNames">Name</th>
	      <th>Time</th>
	      <th>Available</th>
	      <th>Select</th>
	    </tr>
	    <tal:block tal:define="timeSlots day/getTimeSlots">
	      <tr tal:condition="not:timeSlots">
		<td colspan="4">No slots have been made available for this day yet.</td>
	      </tr>
	      <tr tal:repeat="timeSlot timeSlots">
		<td tal:condition="context/showSlotNames">
		  <strong><span tal:content="timeSlot/name" /></strong>
		</td>
		<td>
		  <span tal:content="timeSlot/getTimeRange" />
		  <span tal:condition="view/showEditLinks">
		    <a tal:attributes="href string:${timeSlot/absolute_url}/edit">Edit</a>
		  </span>
		</td>
		<td>
		  <span tal:content="timeSlot/getNumberOfAvailableSpots" />
		  <span tal:condition="timeSlot/getAllowWaitingList">
		    + Waiting List
		  </span>
		</td>
		<td align="center" tal:define="userAlreadySignedup timeSlot/isCurrentUserSignedUpForThisSlot">
		  <em>
		    <strong tal:condition="userAlreadySignedup">
		      &rarr; Your Slot &larr;
		    </strong>
		  </em>
		  
		  <tal:block tal:condition="not:userAlreadySignedup" tal:define="full timeSlot/isFull">
		    <tal:block tal:condition="not:full">
		      <input tal:condition="allowSignupForMultipleSlots" type="checkbox" name="slotSelection"
		             tal:attributes="value timeSlot/getLabel" />
		      <input tal:condition="not:allowSignupForMultipleSlots" type="radio" name="slotSelection"
		      	     tal:attributes="value timeSlot/getLabel" />
		    </tal:block>
		    <span tal:condition="full">Full</span>
		  </tal:block>
	        </td>
	      </tr>
	    </tal:block>
	  </tal:block>
	</table>
			   
        <div tal:condition="view/areAnyExtraFieldsRequired" id="extraInfo">
	  <br />
	  <h3>Required Extra Information</h3>
	  <br />
	  
	  <div tal:condition="python: view.isFieldRequired('phone')">
	    <label for="phone">Campus Phone</label>
	    <span class="fieldRequired" title="Required">  (Required) </span><br />
	    <input type="text" id="phone" name="phone" />
	    <br />
	    <br />
	  </div>
	  
	  <div tal:condition="python: view.isFieldRequired('classification')">
	    <label for="classification">Employee Classification Type</label>
	    <span class="fieldRequired" title="Required">  (Required) </span><br />
	    <select id="classification" size="1" name="classification">
	      <option value="" />
	      <option value="Academic">Academic Staff</option>
	      <option value="Classified">Classified Staff</option>
	      <option value="Faculty">Faculty</option>
	      <option value="LTE">Limited Term Employee</option>
	      <option value="Other">Other</option>
	      <option value="Spouse - Faculty">Spouse - Faculty</option>
	      <option value="Student">Student</option>
	    </select>
	    <br />
	    <br />
	  </div>
       
	  <div tal:condition="python: view.isFieldRequired('department')">
	    <label for="department">Department</label>
	    <span class="fieldRequired" title="Required">  (Required) </span><br />
	    <input type="text" id="department" name="department" />
	    <br />
	    <br />
	  </div>
	</div>
	  
	<div tal:condition="isCurrentUserLoggedIn">
	  <br />
	  <input type="submit" name="form.button.submit" value="Submit" />
	  <input type="hidden" name="form.submitted" value="1" />
	  <input tal:attributes="value member" type="hidden" name="memberToAssign" />
	</div>

      </form>

    </tal:main-macro>
  </div>
</body>
</html>
