<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="uwosh.timeslot">

<body>
    <div metal:fill-slot="main">
        <tal:main-macro metal:define-macro="main">

            <h2 tal:content="string:${context/Title} - Manager Summary" />
            
            <div class="day" tal:repeat="day context/getDays">
                <h3 tal:content="day/Title" />
                <a tal:attributes="href string:${context/absolute_url}/remove-all-people-from-day?daySelection=${day/Title};">
                    Remove all people from this day
                </a>
                <div class="timeSlot" tal:repeat="timeSlot day/getTimeSlots">
                    <h4 tal:content="timeSlot/Title" />
                    
                    <table class="plain">
                        <tr>
                            <th>Name</th>
                            <th>Status</th>                        
                        </tr>
                        <tr tal:repeat="person timeSlot/getPeople">
                            <td>
                                <span tal:content="person/Title" />
                            </td>
                            <td>
                                <span tal:content="person/getReviewState" />
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            
            <a tal:attributes="href string:${context/absolute_url};">Return to the choose timeslot view</a>
        
        </tal:main-macro>
    </div>
</body>
</html>
