<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="uwosh.timeslot">

<body>
    <div metal:fill-slot="main">
        <tal:main-macro metal:define-macro="main">
            <h2 tal:content="string:${context/Title} - Sign Up Results" />
      
            <div>
                <tal:block tal:condition="view/success">
                    <tal:block tal:condition="not:view/waiting">
                        <h3>Successful Signup</h3>
                        <p>You have been successfully signed up for the day you selected.</p>
                        <p tal:condition="view/isEmailValid">A confirmation email has been sent to you.</p>
                    </tal:block>
                    
                    <tal:block tal:condition="view/waiting">
                        <h3>Successfully Added to Waiting List</h3>
                        <p>You have been successfully added to the waiting list for the day you selected.</p>
                        <p tal:condition="view/isEmailValid">You will receive a confirmation email when a spot opens up.</p>
                    </tal:block>
                </tal:block>
                
                <tal:block tal:condition="not:view/success">
                    <h3>Unsuccessful Signup</h3>
                    <p>The system was unable to register you for the day and time you selected.</p>
                    <p tal:content="view/errorMsg" />
                </tal:block>
            </div>
            
            <a tal:attributes="href string:${context/absolute_url};">Return to the signup sheet</a>
        </tal:main-macro>
    </div>
</body>
</html>
