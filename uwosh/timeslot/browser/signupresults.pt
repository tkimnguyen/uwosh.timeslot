<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="uwosh.timeslot">

<body>
    <div metal:fill-slot="main">
        <tal:main-macro metal:define-macro="main">
            <h2 tal:content="string:${context/Title} - Sign Up Results" />
            <div tal:condition="view/wasSignupSuccessful">
                <h3>Success</h3>
                
                <div tal:condition="not:view/wasAddedToWaitingList">
                    <p>You were successfully signed up for the day you selected.</p>
                    <p>A reminder email has been sent to you</p>
                </div>
                
                <div tal:condition="view/wasAddedToWaitingList">
                    <p>You have been successfully added to the waiting list for the day you selected.</p>
                    <p>You will be notified once a spot opens up.</p>
                </div>                
            </div>
            <div tal:condition="not:view/wasSignupSuccessful">
                <h3>Failure</h3>
                <p>The system was not able to register you for the day and time you selected.</p>
            </div>
            <a tal:attributes="href string:${context/absolute_url};">Return to the signup sheet</a>
        </tal:main-macro>
    </div>
</body>
</html>
