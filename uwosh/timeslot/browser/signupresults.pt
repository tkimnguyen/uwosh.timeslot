<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="uwosh.timeslot">

<body>
    <div metal:fill-slot="main">
        <tal:main-macro metal:define-macro="main">
            <h2 tal:condition="view/wasSignupSuccessful">Good work. You are signed up!</h2>
            <h2 tal:condition="not:view/wasSignupSuccessful">The slot you attempted to sign up for was full. Sorry</h2>
            <a tal:attributes="href string:${context/absolute_url};">Return to the signup sheet.</a>
        </tal:main-macro>
    </div>
</body>
</html>
