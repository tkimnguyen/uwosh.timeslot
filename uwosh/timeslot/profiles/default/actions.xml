<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 <action-provider name="portal_workflow"/>
 <action-provider name="portal_types"/>
 <action-provider name="portal_actions"/>
 
 <object name="object" meta_type="CMF Action Category">
  <property name="title"></property>
  
  <object name="exportcsv" meta_type="CMF Action">
   <property name="title">Export to CSV</property>
   <property name="description"></property>
   <property name="url_expr">string:export-to-csv</property>
   <property name="icon_expr"></property>
   <property
      name="available_expr">python:object.getTypeInfo().getId() == 'Signup Sheet'</property>
   <property name="permissions">
    <element value="Manage portal"/>
   </property>
   <property name="visible">True</property>
  </object>
  
  <object name="manager-summary" meta_type="CMF Action">
   <property name="title">Manager Summary</property>
   <property name="description"></property>
   <property name="url_expr">string:manager-summary</property>
   <property name="icon_expr"></property>
   <property
      name="available_expr">python:object.getTypeInfo().getId() == 'Signup Sheet'</property>
   <property name="permissions">
    <element value="Manage portal"/>
   </property>
   <property name="visible">True</property>
  </object>
  
  <object name="remove-all-people" meta_type="CMF Action">
   <property name="title">Remove All People</property>
   <property name="description"></property>
   <property name="url_expr">string:remove-all-people</property>
   <property name="icon_expr"></property>
   <property
      name="available_expr">python:object.Type() in ['Signup Sheet', 'Day', 'Time Slot']</property>
   <property name="permissions">
    <element value="Manage portal"/>
   </property>
   <property name="visible">True</property>
  </object>
 
 </object>
</object>
